                                    <TransformGroup>
                                        <TransformGroup.Children>
                                            <RotateTransform Angle="0" />
                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                        </TransformGroup.Children>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                    </Viewbox>
                </Button>
            </StackPanel>

            <ListBox Grid.Row="2" Background="Transparent" Margin="10,5"
                     Style="{StaticResource SourceListBoxStyle}"
                     SelectedItem="{Binding SourceList_SelectedItem, Mode=TwoWay}" 
                     ItemsSource="{Binding SourceList}" />
        </Grid>

        <Grid Grid.Row="3"
              Margin="10 0 0 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"  
                   Foreground="{StaticResource ApplicationForgroundColor}" FontSize="16" 
                   Content="{util:Localization settings_categories}"/>
            <StackPanel Grid.Row="1" Margin="10,0,0,0">
                <CheckBox Margin="5"
                          Content="{util:Localization theme_general}"
                          IsChecked="{Binding TabVisibility_General, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_sport}"
                          IsChecked="{Binding TabVisibility_Sport, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_technology}"
                          IsChecked="{Binding TabVisibility_Technology, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_health}"
                          IsChecked="{Binding TabVisibility_Health, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_economy}"
                          IsChecked="{Binding TabVisibility_Economy, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_career}"
                          IsChecked="{Binding TabVisibility_Career, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_international}"
                          IsChecked="{Binding TabVisibility_International, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_politics}"
                          IsChecked="{Binding TabVisibility_Politics, Mode=TwoWay}"/>
                <CheckBox Margin="5"
                          Content="{util:Localization theme_cultural}"
                          IsChecked="{Binding TabVisibility_Cultural, Mode=TwoWay}"/>
            </StackPanel>

            
        </Grid>
    </Grid>
</UserControl>
